%nav.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", "data-toggle": "collapse", "data-target": "#navbar", "aria-expanded": "false", "aria-controls": "navbar"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"} Brain Stormer
    - if current_user
      #navbar.navbar-collapse.collapse
        %form.navbar-form.navbar-right{id: "logout", action: "/logout", method: "post"}
          .form-group
            %input.btn.btn-success{type: "submit", value: "Logout"}
    - else
      #navbar.navbar-collapse.collapse
        %form.navbar-form.navbar-right{action: "/login", method: "post", id: "login"}
          .form-group
            %input.form-control{name: "email", type: "email", placeholder: "Email", required: true}
          .form-group
            %input.form-control{name: "password", type: "password", placeholder: "Password"}
            %input.btn.btn-success{type: "submit", value: "Sign in"}
